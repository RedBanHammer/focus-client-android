<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.usc.csci310.focus.focus.presentation.schedule.ScheduleInterfaceController"
    android:background="#fff">
    <TextView
        android:id="@+id/schedule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/edit_schedule_name_button"
        android:layout_width="@dimen/edit_schedule_name_button"
        android:layout_height="@dimen/edit_schedule_name_button"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/fab_margin"/>
    <LinearLayout
        android:id="@+id/toggle_weekly_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/schedule_name"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/fab_margin">
        <TextView
            android:id="@+id/repeat_weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="repeat weekly"/>
        <ToggleButton
            android:id="@+id/repeat_weekly_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/delete_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete schedule"/>
        <Button
            android:id="@+id/delete_schedule_button"
            android:layout_width="@dimen/del_schedule_button"
            android:layout_height="@dimen/del_schedule_button"
            android:text="-"/>
    </LinearLayout>

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_below="@id/toggle_weekly_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:eventTextColor="@android:color/white"
        app:textSize="12sp"
        app:hourHeight="60dp"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="@color/toolbar_text"
        app:headerRowPadding="12dp"
        app:columnGap="8dp"
        app:noOfVisibleDays="3"
        app:headerRowBackgroundColor="@color/toolbar"
        app:dayBackgroundColor="#05000000"
        app:todayBackgroundColor="#1848adff"
        app:headerColumnBackground="#ffffffff"
        app:todayHeaderTextColor="@color/accent" />
</RelativeLayout>

